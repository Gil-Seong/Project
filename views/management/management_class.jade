 body

       div(data-role='header', data-position='fixed', data-fullscreen='false')
         a(href='/', data-rel='back', data-icon='back') Back
         a(href='/', data-icon='home', data-iconpos='notext') 홈
         h1.usertitle 수업신청 관리페이지
         div(data-role='navbar')
           ul
             li
               a(href='/management/user', data-transition='flip') user 관리
             li
               a.ui-btn-active(href='/management/class', data-transition='flip') class 관리
             li
               a(href='/management/curriculum', data-transition='flip') curriculum 관리

       div(data-role='content')
         table(data-role='table' id='movie-table' data-filter='true' data-input='#filterTable-input2' class='ui-responsive' border='1' style='font-size:0.5em;')
          caption 수업신청 목록
           input(id='filterTable-input2' data-type='search')
          thead
             tr(bgcolor="#CCC")
              th(data-priority='1') num
              th(data-priority='2') 작성자
              th(data-priority='3') 제목
              th(data-priority='4') 과목
              th(data-priority='5') 비용
              th(data-priority='6' style='width:10%') class_drop
            each row in rows
             tr
              td=count++
              td=row.userid
              td=row.class_title
              td=row.class_subject
              td=row.expense
              td
               form(action='/class_delete' method='post' )
                input(type="hidden" name='cid' value=row.cid)
                input(type='submit' value='DROP' data-mini='true' data-inline='true')
       div(data-role='footer', data-position='fixed')
        div(data-role='navbar')
